<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".views.usuario.CreateUsuario">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_weight="15"
            android:id="@+id/linearLayout"
            android:paddingTop="10dp">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="User information"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/color_texto_principal"
                android:textAppearance="?android:textAppearanceLarge"
                android:layout_weight="75"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_weight="80">

        <ScrollView
                android:id="@+id/scroll1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:paddingLeft="16dp">

            <GridLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/grid1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="First Name"
                        android:layout_gravity="center|left"
                        android:id="@+id/txtFirstView"
                        android:layout_row="0"
                        android:layout_column="0"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="FirstName"
                        android:ems="10"
                        android:layout_gravity="center|left"
                        android:id="@+id/FirstName"
                        android:layout_row="0"
                        android:layout_column="1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Last Name"
                        android:layout_gravity="center|left"
                        android:id="@+id/textLastName"
                        android:layout_row="1"
                        android:layout_column="0"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="LastName"
                        android:ems="10"
                        android:layout_gravity="center|left"
                        android:id="@+id/LastName"
                        android:layout_row="1"
                        android:layout_column="1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Username"
                        android:layout_gravity="center|left"
                        android:id="@+id/textUsername"
                        android:layout_row="2"
                        android:layout_column="0"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="username"
                        android:ems="10"
                        android:layout_gravity="center|left"
                        android:id="@+id/username"
                        android:layout_row="2"
                        android:layout_column="1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Email"
                        android:layout_gravity="center|left"
                        android:id="@+id/textEmail"
                        android:layout_row="3"
                        android:layout_column="0"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:hint="Email"
                        android:layout_gravity="center|left"
                        android:id="@+id/userEmail"
                        android:layout_row="3"
                        android:layout_column="1"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Phone"
                        android:layout_gravity="center|left"
                        android:id="@+id/textPhone"
                        android:layout_row="4"
                        android:layout_column="0"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:hint="Phone"
                        android:layout_gravity="center|left"
                        android:id="@+id/phoneNumber"
                        android:layout_row="4"
                        android:layout_column="1"
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Sex"
                        android:layout_gravity="center|left"
                        android:id="@+id/textSex"
                        android:layout_row="5"
                        android:layout_column="0"/>
                <Spinner
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:id="@+id/sex"
                        android:layout_row="5"
                        android:layout_column="1"
                        android:spinnerMode="dialog"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Date of Birth"
                        android:layout_gravity="center|left"
                        android:id="@+id/textDateBirth"
                        android:layout_row="6"
                        android:layout_column="0"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:layout_gravity="center|left"
                        android:id="@+id/DateBirth"
                        android:layout_row="6"
                        android:layout_column="1"
                        android:hint="DateBirth"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Date of Birth"
                        android:layout_gravity="center|left"
                        android:id="@+id/Address"
                        android:layout_row="7"
                        android:layout_column="0"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:layout_gravity="center|left"
                        android:id="@+id/TestAddress"
                        android:layout_row="7"
                        android:layout_column="1"
                        android:hint="DateBirth"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Date of Birth"
                        android:layout_gravity="center|left"
                        android:id="@+id/Address2"
                        android:layout_row="8"
                        android:layout_column="0"/>
                <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:ems="10"
                        android:layout_gravity="center|left"
                        android:id="@+id/TestAddress2"
                        android:layout_row="8"
                        android:layout_column="1"
                        android:hint="DateBirth"/>
            </GridLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_weight="5">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/OK"
                android:id="@+id/btnUpdate"
                android:background="@drawable/button_selector"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>