<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/item_panel"
            android:paddingRight="36.0dip"
            android:layout_width="fill_parent"
            android:layout_height="58.0dip">

        <ImageView
                android:id="@+id/contactPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/default_head"
                />
        <TextView
                android:id="@+id/firstName"
                android:textAppearance="?android:textAppearanceMediumInverse"
                android:textColor="@drawable/gray_white_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="5.0dip"
                android:layout_marginRight="5.0dip"
                android:singleLine="true"
                android:layout_toLeftOf="@id/contactPhoneNumber"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"/>
        <TextView
                android:id="@+id/phoneNumber"
                android:textAppearance="?android:textAppearanceSmallInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4.0dip"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:textColor="@drawable/gray_white_selector"
                android:layout_alignStart="@+id/firstName"/>
    </RelativeLayout>
</LinearLayout>